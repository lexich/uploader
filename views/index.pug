extends base
block style
  each item in manifest.entrypoints
    if item.slice(-4) == '.css'
      link(rel='stylesheet' href=item)
  style.
    .link {
      text-overflow: ellipsis;
      cursor: pointer !important;
      max-width: 130px;
      display: inline-block;
      white-space: nowrap;
      overflow: hidden;
    }

block body
  #root

block script
  script(type='text/javascript' data-files-json).
    window.FILES = !{JSON.stringify(files)}
  each item in manifest.entrypoints
    if item.slice(-3) == '.js'
      script(type='text/javascript' src=item)
